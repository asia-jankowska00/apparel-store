<%- contentFor('body') %>
<main class="container">
  <div class="pt-6 pb-6">
    <div class="row flex flex-wrap justify-between">
      <% for (let product of products){%>
      <div class="col col-4 ml-0">
        <%if(product.image) {%>
        <img alt="" src="/files/<%=product.image%>" />
        <% }else {%> <% } %>

        <h5><%= product.name %></h5>
        <h5><%= product.index %></h5>

        <p><%= product.description %></p>

        <p class="text-bold">
          <%= new Intl.NumberFormat('de-DE', { style: 'currency', currency:
          'EUR' }).format(product.price) %>
        </p>

        <a class="btn btn-primary mr-4" href="/<%=product._id%>">View</a>
      </div>
      <% }%>
    </div>
  </div>
</main>
