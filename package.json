{
    "name": "apparel-store",
    "version": "0.1.0",
    "description": "An e-commerce website built with Node.js, express and TypeScript",
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "",
    "license": "MIT",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "dev": "nodemon src/server.ts",
        "debug": "npm run build && npm run watch-debug",
        "format": "npm-run-all format:*",
        "format:ts": "prettier --write \"**/*.ts{,x}\"",
        "format:json": "prettier --write \"**/*.json\"",
        "format:md": "prettier --write \"**/*.md\"",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect  src/server.ts",
        "serve": "node server.ts",
        "start": "npm run serve",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon  src/server.ts",
        "watch-sass": "sass --watch src/sass/main.scss src/public/css/main.css",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "async": "3.2.2",
        "bcrypt-nodejs": "0.0.3",
        "bluebird": "3.7.2",
        "body-parser": "1.19.1",
        "compression": "1.7.4",
        "connect-mongo": "4.6.0",
        "cors": "^2.8.5",
        "dotenv": "10.0.0",
        "ejs": "^3.1.6",
        "errorhandler": "1.5.1",
        "express": "4.17.1",
        "express-ejs-layouts": "^2.5.1",
        "express-session": "1.17.2",
        "express-validator": "6.14.0",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "lusca": "1.7.0",
        "mongoose": "6.1.1",
        "node-sass": "^7.0.0",
        "node-sass-middleware": "^0.11.0",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/async": "3.2.10",
        "@types/bcrypt-nodejs": "0.0.31",
        "@types/bluebird": "3.5.36",
        "@types/body-parser": "1.19.2",
        "@types/compression": "1.7.2",
        "@types/concurrently": "6.4.0",
        "@types/cors": "^2.8.12",
        "@types/errorhandler": "1.5.0",
        "@types/eslint": "8.2.1",
        "@types/express": "4.17.13",
        "@types/express-session": "1.17.4",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/lodash": "^4.14.178",
        "@types/lusca": "1.7.1",
        "@types/mongodb": "^4.0.7",
        "@types/node": "16.11.12",
        "@types/node-sass-middleware": "0.0.32",
        "@types/request": "2.48.7",
        "@types/request-promise": "4.1.48",
        "@types/shelljs": "0.8.9",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "5.7.0",
        "@typescript-eslint/parser": "5.7.0",
        "concurrently": "6.4.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.2",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "sass": "1.45.0",
        "shelljs": "0.8.4",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{ts, tsx}": "eslint --cache --fix"
    }
}
